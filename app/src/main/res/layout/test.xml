                                        android:textSize="16dp" />

                                    <Switch
                                        android:id="@+id/mImageFolderDetailMSSwitch"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerVertical="true"
